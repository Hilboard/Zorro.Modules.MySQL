	<ImplicitUsings>enable</ImplicitUsings>
	<Nullable>enable</Nullable>
	<PackageId>Zorro.Modules.MySQL</PackageId>
	<Version>0.0.1</Version>
	<Authors>Artem</Authors>
	<Authors>Hilboard</Authors>
	<Description>MySQL module for Zorro</Description>
	<RepositoryUrl>https://github.com/Hilboard/Zorro.Modules.MySQL</RepositoryUrl>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
